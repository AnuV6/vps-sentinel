<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VPS Sentinel | Dashboard</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #0f172a;
            color: #e2e8f0;
        }

        .neon-text {
            text-shadow: 0 0 10px rgba(74, 222, 128, 0.5);
        }

        .neon-border {
            box-shadow: 0 0 15px rgba(74, 222, 128, 0.2);
        }
    </style>
</head>

<body class="p-10 font-sans">

    <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-center mb-10">
            <div class="flex items-center gap-4">
                <img src="/images/logo.png" alt="VPS Sentinel" class="h-16">
                <h1 class="text-3xl font-bold tracking-wider text-green-400 neon-text">VPS Sentinel</h1>
            </div>
            <button onclick="document.getElementById('addModal').classList.remove('hidden')"
                class="bg-green-500 hover:bg-green-600 text-black font-bold py-2 px-6 rounded shadow-lg transition transform hover:scale-105">
                + Add Monitor
            </button>
        </div>

        <div class="space-y-4">
            <% monitors.forEach(monitor=> { %>
                <div
                    class="bg-slate-800 rounded-xl p-6 flex items-center justify-between border border-slate-700 shadow-xl hover:border-green-500/30 transition duration-300">
                    <!-- Status Icon -->
                    <div class="flex items-center gap-6 w-1/4">
                        <div class="relative">
                            <% if (monitor.last_check_status===200) { %>
                                <div
                                    class="w-12 h-12 rounded-full bg-green-500/20 flex items-center justify-center border border-green-500 shadow-[0_0_15px_rgba(34,197,94,0.4)]">
                                    <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor"
                                        viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M5 13l4 4L19 7"></path>
                                    </svg>
                                </div>
                                <% } else { %>
                                    <div
                                        class="w-12 h-12 rounded-full bg-red-500/20 flex items-center justify-center border border-red-500 shadow-[0_0_15px_rgba(239,68,68,0.4)] animate-pulse">
                                        <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                                            </path>
                                        </svg>
                                    </div>
                                    <% } %>
                        </div>
                        <div>
                            <h3 class="font-bold text-xl text-white">
                                <%= monitor.name %>
                            </h3>
                            <a href="<%= monitor.url %>" target="_blank"
                                class="text-sm text-slate-400 hover:text-green-400 transition">
                                <%= monitor.url %>
                            </a>
                        </div>
                    </div>

                    <!-- Uptime Stats -->
                    <div class="text-center w-1/6">
                        <div class="text-slate-400 text-xs uppercase tracking-widest font-semibold mb-1">Status</div>
                        <% if (monitor.last_check_status===200) { %>
                            <span
                                class="text-green-400 font-bold bg-green-900/40 px-3 py-1 rounded-full text-sm">ONLINE</span>
                            <% } else if (monitor.last_check_status===null) { %>
                                <span
                                    class="text-slate-400 font-bold bg-slate-700/40 px-3 py-1 rounded-full text-sm">PENDING</span>
                                <% } else { %>
                                    <span
                                        class="text-red-400 font-bold bg-red-900/40 px-3 py-1 rounded-full text-sm">DOWN
                                        (<%= monitor.last_check_status %>)</span>
                                    <% } %>
                    </div>

                    <!-- Sparkline -->
                    <div class="w-1/3 h-16">
                        <canvas id="chart-<%= monitor.id %>"></canvas>
                    </div>

                    <!-- Latency & Time -->
                    <div class="text-right w-1/6">
                        <div
                            class="text-2xl font-mono font-bold <%= monitor.last_check_latency > 500 ? 'text-yellow-400' : 'text-slate-200' %>">
                            <%= monitor.last_check_latency || 0 %> ms
                        </div>
                        <div class="text-slate-500 text-xs mt-1">
                            <%= monitor.last_check_time ? new Date(monitor.last_check_time).toLocaleTimeString('en-US', { timeZone: 'Asia/Colombo' })
                                : 'Never' %>
                        </div>
                    </div>

                    <!-- Delete Button -->
                    <form action="/delete/<%= monitor.id %>" method="POST" class="ml-4"
                        onsubmit="return confirm('Are you sure?')">
                        <button type="submit" class="text-slate-600 hover:text-red-400 transition">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                </path>
                            </svg>
                        </button>
                    </form>
                </div>
                <% }) %>
        </div>

        <% if (monitors.length===0) { %>
            <div class="text-center py-20 text-slate-500">
                <p class="text-xl">No monitors added yet.</p>
                <p class="text-sm">Click "Add Monitor" to get started.</p>
            </div>
            <% } %>

    </div>

    <!-- Add Modal -->
    <div id="addModal" class="fixed inset-0 bg-black/80 hidden flex items-center justify-center z-50 backdrop-blur-sm">
        <div class="bg-slate-800 p-8 rounded-xl border border-slate-600 w-full max-w-md shadow-2xl">
            <h2 class="text-2xl font-bold mb-6 text-white">Add New Monitor</h2>
            <form action="/add" method="POST">
                <div class="mb-4">
                    <label class="block text-slate-400 mb-2 font-bold">Friendly Name</label>
                    <input type="text" name="name" placeholder="e.g. Client Landing Page"
                        class="w-full bg-slate-900 border border-slate-700 rounded p-3 text-white focus:border-green-500 focus:outline-none placeholder-slate-600"
                        required>
                </div>
                <div class="mb-4">
                    <label class="block text-slate-400 mb-2 font-bold">Monitor Type</label>
                    <select name="type" id="typeSelect" onchange="toggleFields()"
                        class="w-full bg-slate-900 border border-slate-700 rounded p-3 text-white focus:border-green-500 focus:outline-none">
                        <option value="http">Website (HTTP/200)</option>
                        <option value="keyword">Keyword Check</option>
                        <option value="port">Port Check (TCP)</option>
                    </select>
                </div>

                <div class="mb-6">
                    <label class="block text-slate-400 mb-2 font-bold">Target (URL or IP)</label>
                    <input type="text" name="url" placeholder="https://example.com"
                        class="w-full bg-slate-900 border border-slate-700 rounded p-3 text-white focus:border-green-500 focus:outline-none placeholder-slate-600"
                        required>
                </div>

                <div id="keywordField" class="mb-6 hidden">
                    <label class="block text-slate-400 mb-2 font-bold">Keyword to Find</label>
                    <input type="text" name="keyword" placeholder="e.g. Welcome"
                        class="w-full bg-slate-900 border border-slate-700 rounded p-3 text-white focus:border-green-500 focus:outline-none placeholder-slate-600">
                </div>

                <div id="portField" class="mb-6 hidden">
                    <label class="block text-slate-400 mb-2 font-bold">Port Number</label>
                    <input type="number" name="port" placeholder="e.g. 3306"
                        class="w-full bg-slate-900 border border-slate-700 rounded p-3 text-white focus:border-green-500 focus:outline-none placeholder-slate-600">
                </div>

                <script>
                    function toggleFields() {
                        const type = document.getElementById('typeSelect').value;
                        document.getElementById('keywordField').classList.add('hidden');
                        document.getElementById('portField').classList.add('hidden');

                        if (type === 'keyword') document.getElementById('keywordField').classList.remove('hidden');
                        if (type === 'port') document.getElementById('portField').classList.remove('hidden');
                    }
                </script>
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="document.getElementById('addModal').classList.add('hidden')"
                        class="px-4 py-2 text-slate-400 hover:text-white transition">Cancel</button>
                    <button type="submit"
                        class="bg-green-500 hover:bg-green-600 text-black font-bold px-6 py-2 rounded shadow-lg">Save &
                        Start</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const monitorsData = '<%- JSON.stringify(monitors) %>';
        const monitors = JSON.parse(monitorsData);
        monitors.forEach(m => {
            if (!m.history || m.history.length === 0) return;

            const ctx = document.getElementById('chart-' + m.id).getContext('2d');
            const statusColor = m.last_check_status === 200 ? '#4ade80' : '#ef4444';

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: m.history.map(h => ''),
                    datasets: [{
                        data: m.history.map(h => h.latency),
                        borderColor: statusColor,
                        borderWidth: 2,
                        tension: 0.4,
                        pointRadius: 0,
                        fill: {
                            target: 'origin',
                            above: statusColor + '20' // 20% opacity
                        }
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false }, tooltip: { enabled: false } },
                    scales: {
                        x: { display: false },
                        y: { display: false, min: 0 }
                    },
                    animation: false
                }
            });
        });
    </script>
</body>

</html>